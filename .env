# Application Settings
ENVIRONMENT=development
APP_URL=http://localhost:8000
DEBUG=True

# Database
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/ai_scrum_master
# For SQLite (development): sqlite+aiosqlite:///./dev.db
DATABASE_URL=sqlite+aiosqlite:///./dev.db
DATABASE_ECHO=True

# Authentication & Security
SECRET_KEY=dev-secret-key-12345678901234567890123456789012
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration
OPENAI_API_KEY=sk-placeholder-replace-with-real-key
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
MAX_TOKENS=2000

# Vector Database (Optional - for advanced features)
# Leave empty for now - not needed for Week 1-4
VECTOR_DB_PROVIDER=
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=

# External Integrations (Optional)
# Jira
JIRA_SERVER_URL=
JIRA_CLIENT_ID=
JIRA_CLIENT_SECRET=

# Slack
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=

# GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Workflow & Scheduling
ENABLE_SCHEDULED_TASKS=True
DEFAULT_STANDUP_TIME=09:00
TIMEZONE=UTC

# Redis (Optional - for task queue)
REDIS_URL=redis://localhost:6379

# CORS - Frontend URLs
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=

# Feature Flags
ENABLE_AI_SUGGESTIONS=True
ENABLE_AUTO_TICKET_CREATION=False
ENABLE_ANALYTICS=True

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# AI Agent Configuration
MAX_AGENT_ITERATIONS=10
AGENT_TIMEOUT=300
# Ollama Configuration (Free Local AI)
USE_OLLAMA=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
