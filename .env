# Application
APP_URL=http://localhost:8000
DEBUG=True

# Database - REQUIRED
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_scrum_master

# Security - REQUIRED (generate a random secret)
SECRET_KEY=your-super-secret-key-change-this-in-production

# LLM Configuration - USING OLLAMA
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TEMPERATURE=0.3
MAX_TOKENS=2000

# Legacy OpenAI fields (not used with Ollama, but required by config)
OPENAI_API_KEY=not-needed-for-ollama
OPENAI_MODEL=gpt-4

# Vector Database (Optional for now - disable)
VECTOR_DB_PROVIDER=none

# Jira (Optional - add when ready)
# JIRA_SERVER_URL=https://your-domain.atlassian.net
# JIRA_CLIENT_ID=
# JIRA_CLIENT_SECRET=

# Slack (Optional - add when ready)  
# SLACK_CLIENT_ID=
# SLACK_CLIENT_SECRET=
# SLACK_SIGNING_SECRET=

# GitHub (Optional - add when ready)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Redis
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_ORIGINS=["http://localhost:3000"]

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_AI_SUGGESTIONS=True
ENABLE_AUTO_TICKET_CREATION=False
ENABLE_ANALYTICS=True

# Scheduling
ENABLE_SCHEDULED_TASKS=False
DEFAULT_STANDUP_TIME=09:00
TIMEZONE=UTC
